<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="text-center">Ваше замовлення</h2>
        <div class="bg-white p-4 shadow-sm rounded">
            @foreach (var product in Model)
            {
                <p><strong>Товар:</strong> @product.Name, <strong>Кількість:</strong> @product.Quantity</p>
            }
        </div>
        <a href="/" class="btn btn-primary mt-4 w-100">Повернутися на головну</a>
    </div>
</div>
