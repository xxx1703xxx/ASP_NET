@model PizzaOrderApp.Models.User

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">Реєстрація</h2>
        <form asp-action="Register" method="post" class="bg-white p-4 shadow-sm rounded">
            <div class="mb-3">
                <label for="Name" class="form-label">Ім'я:</label>
                <input type="text" name="Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="Age" class="form-label">Вік:</label>
                <input type="number" name="Age" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Зареєструватися</button>
        </form>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</div>
