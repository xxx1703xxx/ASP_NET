<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">Виберіть кількість товарів</h2>
        <form asp-action="SelectProducts" method="post" class="bg-white p-4 shadow-sm rounded">
            <input type="hidden" name="userId" value="@ViewBag.UserId" />
            <div class="mb-3">
                <label for="productCount" class="form-label">Скільки одиниць товару ви бажаєте замовити?</label>
                <input type="number" name="productCount" class="form-control" min="1" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Підтвердити</button>
        </form>
    </div>
</div>
